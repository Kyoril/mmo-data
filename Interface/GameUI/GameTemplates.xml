		<Visual>
			<ImagerySection name="Text">
				<TextComponent color="$TextColor" horzAlign="$HorzAlign" vertAlign="$VertAlign" />
			</ImagerySection>
			<StateImagery name="Enabled">
				<Layer>
					<Section section="Text" />
				</Layer>
			</StateImagery>
			<StateImagery name="Disabled">
				<Layer>
					<Section section="Text" />
				</Layer>
			</StateImagery>
		</Visual>
		<Area>
			<Size><AbsDimension x="0" y="44" /></Size>
		</Area>
	</Frame>

